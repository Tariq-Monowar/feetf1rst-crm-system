  methord   String?
  paymentIs String?
  eventId   String?

  note        String?
  system_note String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([customerId])
  @@index([eventId])
  @@index([category])
  @@index([createdAt])
}

